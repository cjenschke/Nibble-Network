{{!-- views/single-recipe.handlebars: --}}
{{> navbar }}

<div class="container mt-4">
    <article class="card">
        <div class="card-body">
            <h1 class="card-title">{{recipe.title}}</h1>
            <!-- Recipe details will be dynamically loaded here -->

            <!-- Save to Favorites Button -->
            <button type="button" class="btn btn-success mt-3" onclick="saveToFavorites('{{recipe.id}}')">Save to Favorites</button>

            <!-- URL Display and Copy to Clipboard -->
            <div class="mt-3">
                <label for="recipeUrl" class="form-label">Recipe URL:</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="recipeUrl" value="{{urlForThisRecipe}}" readonly>
                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">Copy</button>
                </div>
            </div>
        </div>
    </article>
</div>

<script>
    function copyToClipboard() {
        var copyText = document.getElementById("recipeUrl");
        copyText.select();
        document.execCommand("copy");
    }
</script>



